<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/filter_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_add_recipe"
        android:fontFamily="@font/roboto_bold"
        android:paddingVertical="6dp"
        android:paddingStart="8dp"
        android:paddingEnd="26dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/important"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_close"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/filter_text"
        app:layout_constraintRight_toRightOf="@id/filter_text"
        app:layout_constraintTop_toTopOf="@id/filter_text" />


</androidx.constraintlayout.widget.ConstraintLayout>